<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <changeSet id="2025-10-01--client-schema" author="kostya.aus@gmail.com">
        <sql>
            CREATE SCHEMA IF NOT EXISTS client;
        </sql>
    </changeSet>

    <changeSet id="2025-10-01--client-table" author="kostya.aus@gmail.com">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="client" schemaName="client"/>
            </not>
        </preConditions>
        <createTable schemaName="client" tableName="CLIENT" remarks="Договоры">
            <column name="ID" type="uuid" remarks="Уникальный идентификатор клиента" defaultValue="gen_random_uuid()">
                <constraints primaryKey="true" primaryKeyName="PK_CLIENT_ID"/>
            </column>
            <column name="NAME" type="varchar(100)" remarks="Наименование клиента"/>
            <column name="INN" type="varchar(100)" remarks="ИНН клиента"/>
            <column name="ESCALATION_COUNT" type="number" remarks="Количество жалоб/эскалаций"/>
            <column name="CREDIT_HISTORY" type="number" remarks="Кредитная история"/>
            <column name="CLIENT_RELIABILITY" type="number" remarks="Надёжность клиента"/>
            <column name="CREATED_AT" type="TIMESTAMP WITH TIME ZONE" defaultValue="now()"/>
            <column name="UPDATED_AT" type="TIMESTAMP WITH TIME ZONE" defaultValue="now()"/>
            <column name="DELETED" type="boolean"/>
        </createTable>
    </changeSet>

</databaseChangeLog>