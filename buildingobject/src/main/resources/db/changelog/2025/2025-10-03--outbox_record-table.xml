<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <changeSet id="2025-10-03--outbox_record-table" author="kostya.aus@gmail.com">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="OUTBOX_RECORD" schemaName="BUILDING_OBJECT"/>
            </not>
        </preConditions>
        <createTable schemaName="BUILDING_OBJECT" tableName="OUTBOX_RECORD" remarks="Журнал отправки запросов">
            <column name="ID" type="uuid" remarks="Уникальный идентификатор" defaultValue="gen_random_uuid()">
                <constraints primaryKey="true" primaryKeyName="PK_OUTBOX_RECORD_ID"/>
            </column>
            <column name="BUILDING_OBJECT_ID" type="uuid" remarks="Идентификатор объекта недвижимости"/>
            <column name="STATUS" type="varchar(10)" remarks="Статус"/>
            <column name="CREATED_AT" type="TIMESTAMP WITH TIME ZONE" defaultValue="now()"/>
            <column name="UPDATED_AT" type="TIMESTAMP WITH TIME ZONE" defaultValue="now()"/>
        </createTable>
    </changeSet>

</databaseChangeLog>